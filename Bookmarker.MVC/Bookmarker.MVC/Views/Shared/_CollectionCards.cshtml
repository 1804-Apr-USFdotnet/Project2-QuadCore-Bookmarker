@model IEnumerable<Bookmarker.MVC.Models.CollectionViewModel>
<div>
    @{
        var en = Model.GetEnumerator();
        while(en.MoveNext())
        {
            <div class="row" style="margin-bottom: 30px;">
                <div class="col-sm-4">
                    @Html.Partial("_CollectionCard", en.Current)
                </div>
                @if(en.MoveNext())
                {
                    <div class="col-sm-4">
                        @Html.Partial("_CollectionCard", en.Current)
                    </div>
                }
                @if(en.MoveNext())
                {
                    <div class="col-sm-4">
                        @Html.Partial("_CollectionCard", en.Current)
                    </div>
                }
            </div>
        }
     }
</div>
