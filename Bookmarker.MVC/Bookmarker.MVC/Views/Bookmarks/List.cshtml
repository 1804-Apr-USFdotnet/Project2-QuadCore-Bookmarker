@model IEnumerable<Bookmarker.MVC.Models.BookmarkViewModel>


<div class="search-bar" style="position: fixed; background-color: #343a40; color: white; z-index: 100;">
    @using (Html.BeginForm("List", "Bookmarks", FormMethod.Get))
    {
        @Html.TextBox("search")

        List<object> options = new List<object>();
        options.Add(new { name = "Name", value = "name:asc" });
        options.Add(new { name = "Rating", value = "rating:desc" });
        options.Add(new { name = "Collection", value = "collection" });
        options.Add(new { name = "URL", value = "url" });

        <span style="margin-left: 5px;">

        @Html.DropDownList("sort", new SelectList(options, "value", "name"))

        <input type="submit" value="search" class="btn btn-dark"/>
        </span>
    }
</div>
<br />
<br />
<br />

@Html.Partial("_Bookmarks", Model)
